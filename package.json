    "dependencies": {
        "@sap-cloud-sdk/http-client": "^3.13.0",
        "@sap/cds": "^7",
        "@sap/cds-dk": "^7.8.1",
        "@sap/cds-hana": "^2",
        "@sap/xssec": "^3",
        "express": "^4"
    },
    "devDependencies": {
        "@cap-js/sqlite": "^1",
        "@sap/ux-specification": "^1.120.7",
        "rimraf": "^3.0.2"
    },
    "scripts": {
        "start": "cds-serve",
        "watch-sfsf-extension-event-app": "cds watch --open sfsf-extension-event-app/webapp/index.html?sap-ui-xx-viewCache=false",
        "undeploy": "cf undeploy sf-event-manager --delete-services --delete-service-keys --delete-service-brokers",
        "build": "rimraf resources mta_archives && mbt build --mtar archive",
        "deploy": "cf deploy mta_archives/archive.mtar --retries 1"
    },
    "cds": {
        "requires": {
            "PLTUserManagement": {
                "kind": "odata-v2",
                "model": "srv/external/PLTUserManagement",
                "credentials": {
                    "url": "https://sandbox.api.sap.com/successfactors/odata/v2",
                    "headers": {
                        "APIKey": "8DZ2GU1A1FSGuGGGtGgvOx61nAHVv0V5"
                    }
                }
            },
            "[production]": {
                "db": "hana",
                "auth": "xsuaa"
            }
        }
    },
    "sapux": [
        "app/sfsf-extension-event-app"
    ]
}
